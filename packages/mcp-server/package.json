{
  "name": "@openpersonality/mcp-server",
  "version": "0.1.0",
  "description": "MCP Server (stdio) for Open Personality: wraps core as tools, resources, and prompts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "op-mcp-server": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@openpersonality/core": "workspace:*",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0"
  },
  "license": "MIT",
  "author": "koyaaarr",
  "homepage": "https://github.com/koyaaarr/open-personality-mcp#readme",
  "bugs": {
    "url": "https://github.com/koyaaarr/open-personality-mcp/issues"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "personality",
    "openclaw",
    "soul-md",
    "identity-md",
    "ai-agent",
    "claude",
    "cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/koyaaarr/open-personality-mcp",
    "directory": "packages/mcp-server"
  },
  "publishConfig": {
    "access": "public"
  }
}
